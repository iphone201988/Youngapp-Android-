<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.young.ui.stream_screen.StreamVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.stream_screen.LiveStreamFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_8sdp"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_back_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_600_SemiBold"
                android:text="@string/live_streaming"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintStart_toEndOf="@id/ivBack"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/actionToggleBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/iv_drawer"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/publisher_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/tvEndStream"
            app:layout_constraintEnd_toEndOf="@id/clTopBar"
            app:layout_constraintStart_toStartOf="@id/clTopBar"
            app:layout_constraintTop_toBottomOf="@id/clTopBar" />


        <ImageView
            android:id="@+id/ivSendChat"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_37sdp"
            android:src="@drawable/iv_send_btn"
            android:layout_marginEnd="@dimen/_15sdp"
            android:visibility="gone"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="@id/publisher_container"
            app:layout_constraintBottom_toBottomOf="@id/etChat"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etChat"
            style="@style/TextView_400_Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/radius_border_gray"
            android:gravity="start|top"
            android:hint="Text here"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_10sdp"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="1"
            android:maxLines="4"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColorHint="@color/text_gray"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:imeOptions="actionSend"
            app:layout_constraintEnd_toStartOf="@id/ivSendChat"
            app:layout_constraintBottom_toBottomOf="@+id/publisher_container"
            app:layout_constraintStart_toStartOf="@id/publisher_container"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChats"
            android:layout_width="0dp"
            android:layout_height="@dimen/_200sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@id/etChat"
            app:layout_constraintStart_toStartOf="@id/etChat"
            app:layout_constraintEnd_toEndOf="@id/ivSendChat"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEndStream"
            style="@style/TextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/corner_radius_10"
            android:gravity="center"
            android:onClick="@{v ->vm.onClick(v)}"
            android:text="End Streaming"
            app:layout_constraintStart_toStartOf="@id/clTopBar"
            app:layout_constraintEnd_toEndOf="@id/clTopBar"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>