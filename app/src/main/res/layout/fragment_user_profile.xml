<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

            <variable
                name="bean"
                type="com.tech.young.data.model.GetOtherUserProfileData" />
            <variable
                name="vm"
                type="com.tech.young.ui.user_profile.UserProfileVM" />
            <variable
                name="check"
                type="Boolean" />
            <import type="android.view.View"/>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.user_profile.UserProfileFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/rounded_bg"
                android:onClick="@{v ->vm.onClick(v)}"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/iv_back_symbol"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView_600_SemiBold"
                android:layout_marginStart="@dimen/_10sdp"
                android:text='@{bean.firstName + " " + bean.lastName}'
                app:layout_constraintTop_toTopOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintStart_toEndOf="@id/ivBack"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/actionToggleBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:onClick="@{v -> vm.onClick(v)}"
                android:src="@drawable/iv_drawer"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTopBar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:scaleType="centerCrop"
                    setUserImageFromBaseUrl="@{bean.profileImage}"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:src="@drawable/dummy_person"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/Shape50" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView_500_Medium"
                    android:text='@{bean.isRated()+ " Ratings"}'
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toTopOf="@id/ivImage"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintTop_toTopOf="@id/tvRating"
                    app:layout_constraintEnd_toStartOf="@id/tvRating"
                    app:layout_constraintBottom_toBottomOf="@id/tvRating"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/TextView_600_SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{bean.firstName + " " + bean.lastName}'
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/ivImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/iv_hand_image"
                    android:visibility="@{bean.fairnessForward ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toTopOf="@id/tvName"
                    app:layout_constraintBottom_toBottomOf="@id/tvName"
                    app:layout_constraintStart_toEndOf="@id/tvName"/>
                <LinearLayout
                    android:id="@+id/llStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/llShare"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvShareValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:text="@{String.valueOf(bean.sharesCount)}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvShareStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:layout_gravity="center"
                            android:text="@string/share"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFollowingStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:text="@{bean.following.toString()}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:text="Following"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFollowerStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:text="@{bean.followers.toString()}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFollowingBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:gravity="center"
                            android:text="Followed by"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llCustomers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:text="@{bean.customers.toString()}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextView_500_Medium"
                            android:layout_gravity="center"
                            android:text="@string/customers"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/llStats"
                    android:layout_marginHorizontal="@dimen/_18sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFollow"
                        style="@style/TextView_500_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/tab_bg"
                        android:gravity="center"
                        android:onClick="@{v ->vm.onClick(v)}"
                        android:text="@string/follow"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFollowingUser"
                        style="@style/TextView_500_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/corner_radius_16"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:onClick="@{v ->vm.onClick(v)}"
                        android:text="@string/following"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvMessage"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMessage"
                        style="@style/TextView_500_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/corner_radius_16"
                        android:visibility="gone"
                        android:gravity="center"
                        android:onClick="@{v ->vm.onClick(v)}"
                        android:text="@string/message"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@id/tvFollowingUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFullName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etFullName"
                        app:layout_constraintTop_toBottomOf="@id/tvFollow"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etFullName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:text='@{bean.firstName + " " + bean.lastName}'
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvFullName"
                        app:layout_constraintBottom_toBottomOf="@id/tvFullName"
                        app:layout_constraintTop_toTopOf="@id/tvFullName"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMemberName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Member Username"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etMemberName"
                        app:layout_constraintTop_toBottomOf="@id/etFullName"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etMemberName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:text='@{bean.username}'
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvMemberName"
                        app:layout_constraintBottom_toBottomOf="@id/tvMemberName"
                        app:layout_constraintTop_toTopOf="@id/tvMemberName"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/city"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etCity"
                        app:layout_constraintTop_toBottomOf="@id/etMemberName"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvCity"
                        app:layout_constraintBottom_toBottomOf="@id/tvCity"
                        app:layout_constraintTop_toTopOf="@id/tvCity"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/state"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etState"
                        app:layout_constraintTop_toBottomOf="@id/etCity"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvState"
                        app:layout_constraintBottom_toBottomOf="@id/tvState"
                        app:layout_constraintTop_toTopOf="@id/tvState"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFinancialExperience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/financial_experience"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etState"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etFinancialExperience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:text="@{bean.financialExperience}"
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvFinancialExperience"
                        app:layout_constraintBottom_toBottomOf="@id/tvFinancialExperience"
                        app:layout_constraintTop_toTopOf="@id/tvFinancialExperience"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMembership"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Member since"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etMembership"
                        app:layout_constraintTop_toBottomOf="@id/etFinancialExperience"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etMembership"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        setFormattedDate="@{bean.createdAt}"
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvMembership"
                        app:layout_constraintBottom_toBottomOf="@id/tvMembership"
                        app:layout_constraintTop_toTopOf="@id/tvMembership"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvYourPhotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/your_photos"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etMembership"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvYourPhotos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        tools:itemCount="5"
                        android:visibility="gone"
                        tools:listitem="@layout/your_photos_item_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/tvYourPhotos"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/about"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rvYourPhotos"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etAbout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAbout"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInterest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/services_products"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etInterested"
                        app:layout_constraintTop_toBottomOf="@id/etAbout"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etInterested"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:text='@{bean.servicesInterested}'
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvInterest"
                        app:layout_constraintBottom_toBottomOf="@id/tvInterest"
                        app:layout_constraintTop_toTopOf="@id/tvInterest"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGoals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Webiste"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/etGoals"
                        app:layout_constraintTop_toBottomOf="@id/etInterested"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/etGoals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_400_Regular"
                        android:textColor="@color/gray"
                        android:gravity="end"
                        android:text="@{bean.email}"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvGoals"
                        app:layout_constraintBottom_toBottomOf="@id/tvGoals"
                        app:layout_constraintTop_toTopOf="@id/tvGoals"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvShare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/share"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etGoals"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvShare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        tools:itemCount="2"
                        android:visibility="gone"
                        tools:listitem="@layout/share_profile_item_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/tvShare"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRatings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_600_SemiBold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Rate us"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rvShare"
                        />
                    <per.wsj.library.AndRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:rating="3.5"
                        app:starSpacing="@dimen/_5sdp"
                        app:starColor="@color/yellow_star"
                        app:starDrawable="@drawable/ic_star"
                        app:bgColor="@color/yellow_star"
                        app:bgDrawable="@drawable/ic_star_unfilled"
                        app:layout_constraintTop_toBottomOf="@id/tvRatings"
                        app:layout_constraintStart_toStartOf="@id/tvRatings"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icRatingArrow"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:tint="@color/colorPrimary"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:visibility="gone"
                        android:src="@drawable/ic_arrow_forward"
                        app:layout_constraintTop_toTopOf="@id/ratingBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/ratingBar"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAsk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Are you connected to this profile?"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ratingBar"
                        />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCheck"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@{bean.isConnectedWithProfile ? @drawable/ic_check_selected : @drawable/ic_check_unselected}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toBottomOf="@id/tvAsk"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDesc"
                        style="@style/TextView_400_Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="Yes,I'm a customer."
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivCheck"
                        app:layout_constraintTop_toTopOf="@+id/ivCheck" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_600_SemiBold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/report_user"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDesc"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvReportUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_500_Medium"
                        android:onClick="@{v -> vm.onClick(v)}"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/report_user"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvReport"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivReport"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_arrow_forward"
                        android:onClick="@{v->vm.onClick(v)}"
                        app:layout_constraintTop_toTopOf="@id/tvReportUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvReportUser"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextView_600_SemiBold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/ads"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvReportUser"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        tools:itemCount="5"
                        tools:listitem="@layout/ads_item_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/tvAds"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent">
            <include
                android:id="@+id/includeShare"
                layout="@layout/share_stream_layout" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>