<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.tech.young.ui.change_password.ChangePasswordFragmentVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.change_password.ChangePasswordFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOldPassword"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Password"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etOldPassword"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/radius_border_gray"
            android:gravity="start|center"
            android:inputType="textPassword"
            android:hint="Enter old password"
            android:onClick="@{v ->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_10sdp"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@+id/tvOldPassword"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/pass_invisible"
            android:onClick="@{v ->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/etOldPassword"
            app:layout_constraintEnd_toEndOf="@+id/etOldPassword"
            app:layout_constraintTop_toTopOf="@+id/etOldPassword" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNewPassword"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="New Password"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etOldPassword" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etNewPassword"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/radius_border_gray"
            android:gravity="start|center"
            android:inputType="textPassword"
            android:hint="Enter old password"
            android:onClick="@{v ->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_10sdp"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@+id/tvNewPassword"
            tools:layout_editor_absoluteX="0dp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNewPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/pass_invisible"
            android:onClick="@{v ->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
            app:layout_constraintEnd_toEndOf="@+id/etNewPassword"
            app:layout_constraintTop_toTopOf="@+id/etNewPassword" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvConfirmPassword"
            style="@style/TextView_500_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Confirm Password"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etNewPassword" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etConfirmPassword"
            style="@style/TextView_400_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/radius_border_gray"
            android:gravity="start|center"
            android:inputType="textPassword"
            android:hint="Enter confirm password"
            android:onClick="@{v ->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_10sdp"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirmPassword"
            tools:layout_editor_absoluteX="0dp" />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivConfirmPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/pass_invisible"
            android:onClick="@{v ->vm.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="@+id/etConfirmPassword"
            app:layout_constraintEnd_toEndOf="@+id/etConfirmPassword"
            app:layout_constraintTop_toTopOf="@+id/etConfirmPassword" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUpdatePassword"
            style="@style/TextView_500_Medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/corner_radius_10"
            android:gravity="center"
            android:onClick="@{v ->vm.onClick(v)}"
            android:text="Update Password"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>